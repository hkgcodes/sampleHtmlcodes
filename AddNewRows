
function addRows() {
    // Assuming there's a container div with an id "dataForm" wrapping the data table
    var dataForm = document.getElementById("dataForm");

    // Assuming the data table has an id "dataTable"
    var dataTable = dataForm.querySelector("#dataTable");

    // Limit to creating 3 new rows
    for (var i = 0; i < 3; i++) {
        var newRow = document.createElement("tr");

        // Add your custom facets or components for each column
        for (var j = 0; j < 2; j++) { // Assuming 2 columns, adjust as needed
            var column = document.createElement("td");

            // Use facets or components as needed
            var input = document.createElement("input");
            input.type = "text";
            input.name = "cell_" + (i + 1) + "_" + (j + 1);
            // Adjust the width and height as needed
            input.style.width = "80px";
            input.style.height = "20px";
            column.appendChild(input);

            newRow.appendChild(column);
        }

        // Initialize buttons similar to the existing rows
        var actionColumn = document.createElement("td");

        var saveButton = document.createElement("button");
        saveButton.type = "button";
        saveButton.className = "fancy-button save";
        saveButton.textContent = "Save";
        saveButton.disabled = true;
        saveButton.onclick = function () { saveRow(this); };
        actionColumn.appendChild(saveButton);

        var editButton = document.createElement("button");
        editButton.type = "button";
        editButton.className = "fancy-button edit";
        editButton.textContent = "Edit";
        editButton.disabled = false;
        editButton.onclick = function () { editRow(this); };
        actionColumn.appendChild(editButton);

        newRow.appendChild(actionColumn);

        // Append the new row to the data table
        dataTable.appendChild(newRow);
    }
}
