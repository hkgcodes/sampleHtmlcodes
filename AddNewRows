
function addRows() {
    // Assuming there's a container div with an id "dataForm" wrapping the data table
    var dataForm = document.getElementById("dataForm");

    // Assuming the data table has an id "dataTable"
    var dataTable = dataForm.querySelector("#dataTable");

    // Limit to creating 3 new rows
    for (var i = 0; i < 3; i++) {
        // Add your custom facets or components for each column
        var newRowHTML = '<tr>' +
            '<td><input type="text" name="cell_' + (i + 1) + '_1" style="width: 80px; height: 20px;"></td>' +
            '<td><input type="text" name="cell_' + (i + 1) + '_2" style="width: 80px; height: 20px;"></td>' +
            '<td>' +
            '<button type="button" class="fancy-button save" disabled>Save</button>' +
            '<button type="button" class="fancy-button edit">Edit</button>' +
            '</td>' +
            '</tr>';

        // Append the new row HTML to the data table
        dataTable.insertAdjacentHTML('beforeend', newRowHTML);
    }
}
