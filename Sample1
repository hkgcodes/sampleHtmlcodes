<script>
  function addRows() {
    var table = document.getElementById('dataForm:dataTable'); // Use the 'id' of the dataTable
    var numRowsToAdd = 3;

    for (var i = 0; i < numRowsToAdd; i++) {
      var newRow = table.insertRow(-1); // -1 appends the row at the end of the table

      // Assuming two columns for illustration purposes, you can modify as needed
      var cell1 = newRow.insertCell(0);
      cell1.innerHTML = '<input type="text" name="newName" value="" />';
      
      var cell2 = newRow.insertCell(1);
      cell2.innerHTML = '<input type="text" name="newAge" value="" />';
      
      var cell3 = newRow.insertCell(2);
      cell3.innerHTML = '<button type="button" onclick="saveNewRow(this)">Save</button>';
      
      var cell4 = newRow.insertCell(3);
      cell4.innerHTML = '<button type="button" onclick="editNewRow(this)">Edit</button>';
    }
  }

  // Function to handle the Save button for new rows
  function saveNewRow(button) {
    // Implement your save logic here
    alert('Save functionality for new rows');
  }

  // Function to handle the Edit button for new rows
  function editNewRow(button) {
    // Implement your edit logic here
    alert('Edit functionality for new rows');
  }
</script>
